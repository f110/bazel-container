load("@rules_pkg//:pkg.bzl", "pkg_tar")
load("@io_bazel_rules_docker//docker/package_managers:download_pkgs.bzl", "download_pkgs")
load("@io_bazel_rules_docker//docker/toolchain_container:toolchain_container.bzl", "toolchain_container")
load("@io_bazel_rules_docker//container:container.bzl", "container_push")

download_pkgs(
    name = "dep_pkgs",
    image_tar = "@debian11//image",
    packages = [
        "build-essential",
        "ca-certificates",
        "git",
        "libstdc++-10-dev",
        "python",
        "python3",
        "python3-distutils",
    ],
)

pkg_tar(
    name = "bazelisk_bin",
    files = {
        "@bazelisk//file": "/usr/local/bin/bazel",
    },
    mode = "0755",
)

toolchain_container(
    name = "bazelisk",
    base = "@debian11//image",
    entrypoint = ["/usr/local/bin/bazel"],
    installables_tar = "@dep_pkgs//file",
    labels = {
        "org.opencontainers.image.source": "https://github.com/f110/bazel-container",
    },
    tars = [
        ":bazelisk_bin",
    ],
)

container_push(
    name = "publish",
    format = "Docker",
    image = ":bazelisk",
    registry = "ghcr.io",
    repository = "f110/bazel-container",
    tag = "bazelisk",
)
